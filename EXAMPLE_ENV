# athu example environment variables

export PORT=80
# setting SSL_PORT and will override PORT, will start node using built-in https server instead of http
# export SSL_PORT=443
# export SSL_KEY='../certs/server.key'
# export SSL_CERT='../certs/server.crt'
export GOOGLE_CLIENT_ID='your-google-client-id.apps.googleusercontent.com'
export GOOGLE_CLIENT_SECRET='google client secret'
export SESSION_SECRET='your session secret'
export WEBSITE_ROOT_URL='http://athu.yourwebsite.com'

# setup HTTP referrer lookup
export REFERRER_NAMES='TEST1, TEST2'

# TEST1 settings
export REFERRER_TEST1_URL='https://test1.yourwebsite.com/'
export REFERRER_TEST1_SUCCESS_REDIRECT='https://test1.yourwebsite.com/?signin=success'
export REFERRER_TEST1_ERROR_REDIRECT='https://test1.yourwebsite.com/?signin=failed'
export REFERRER_TEST1_JWT_SECRET='test1 jwt secret'

# TEST2 settings
export REFERRER_TEST2_URL='https://test2.yourwebsite.com/'
export REFERRER_TEST2_SUCCESS_REDIRECT='https://test2.yourwebsite.com/?signin=success'
export REFERRER_TEST2_ERROR_REDIRECT='https://test2.yourwebsite.com/?signin=failed'
export REFERRER_TEST2_JWT_SECRET='test2 jwt secret'
